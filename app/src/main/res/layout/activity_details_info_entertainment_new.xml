                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" প্রতিষ্ঠানের বিস্তারিত বিবরন  "
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blue"
                    android:textSize="28dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewrdd"
                    android:src="@drawable/green_line_horizontal"
                    android:padding="5dp"
                    />



                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/listView10"


                    >
                </ListView>


            </LinearLayout>












        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detailed_info_panel_bottom"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout4"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ent"
            android:src="@drawable/finance"
            android:paddingRight="20dp"
