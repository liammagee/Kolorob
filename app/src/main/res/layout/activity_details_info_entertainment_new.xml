                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
