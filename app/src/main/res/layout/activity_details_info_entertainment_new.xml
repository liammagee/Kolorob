                android:paddingBottom="4dp"

                android:layout_below="@+id/tv_website"
                android:layout_alignLeft="@+id/textView13_health" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Facebook Link : "
                android:id="@+id/road"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:visibility="gone"

                android:paddingTop="2dp"
                android:paddingBottom="4dp"

                android:layout_below="@+id/tv_fb"
                android:layout_alignLeft="@+id/textView13_health" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Facebook Link : "
                android:visibility="gone"

                android:id="@+id/block"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"

                android:layout_below="@+id/road"
                android:layout_alignLeft="@+id/textView13_health" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Facebook Link : "
                android:id="@+id/landmark"
                android:textColor="@color/black"
                android:visibility="gone"

                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"

                android:layout_below="@+id/block"
                android:layout_alignLeft="@+id/textView13_health" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/first_list"
                android:layout_below="@+id/landmark"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" প্রতিষ্ঠানের বিস্তারিত বিবরন  "
                    android:layout_marginLeft="10dp"
