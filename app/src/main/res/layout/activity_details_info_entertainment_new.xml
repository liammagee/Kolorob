                    android:textSize="28dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewrh"
                    android:src="@drawable/green_line_horizontal"
                    android:padding="5dp"
                    />



                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/listView7"


                    >
                </ListView>


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/second_list"
                android:layout_below="@+id/first_list"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" প্রতিষ্ঠানের বিস্তারিত বিবরন "
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blue"
                    android:textSize="28dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewrd"
                    android:src="@drawable/green_line_horizontal"
                    android:padding="5dp"
                    />



                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/listView8"


                    >
                </ListView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/third_list"
