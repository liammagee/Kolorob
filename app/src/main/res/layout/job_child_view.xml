<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:gravity="center_horizontal"
    android:id="@+id/job_item"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="Remaining Date"
        android:id="@+id/remaining_date"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Description"
        android:visibility="gone"
        android:textColor="@color/black"
        android:id="@+id/salary_range"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/address"
        android:textSize="17dp"

        android:textColor="@color/black"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required Experience"
        android:visibility="visible"
        android:textSize="17dp"

        android:textColor="@color/black"
        android:id="@+id/required_experience"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/phone_icon_purple"
            android:id="@+id/phone_call" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:background="@drawable/email_icon_purple"
            android:id="@+id/email" />
    </LinearLayout>






</LinearLayout>


