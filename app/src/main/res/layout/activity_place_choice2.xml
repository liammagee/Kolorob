<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@drawable/background_place_choice"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/placemainpageholder"

        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/top_section">



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bauniabad_section"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/baunia_new"
                    android:id="@+id/imageBau">




                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/parisRoad_section"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/paris_new"
                    android:id="@+id/imagePar">

                </LinearLayout>


            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/help_icon"
                android:id="@+id/helpicon"


                android:gravity="right"
                android:onClick="helpDialog"

                android:layout_gravity="bottom|right"
                android:layout_marginTop="220dp"
                android:layout_marginRight="50dp" />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/searchviewholder"
        android:layout_height="match_parent"
        android:background="@drawable/backdrop"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/allitem"
            android:maxHeight="80dp"
            android:minHeight="80dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_fragment"
                android:visibility="gone"
                android:layout_gravity="left|top"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">



            </FrameLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/searchtext"
                android:id="@+id/textView17"
                android:background="@color/white"
                android:layout_alignBottom="@+id/morebutton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/morebutton"
                android:layout_toStartOf="@+id/morebutton" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/morebutton"
                android:background="@drawable/searchbar_dropdown"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/categoryfilterholder"
                android:background="#163e11"
                android:layout_above="@+id/textView17"
                android:layout_alignRight="@+id/morebutton"
                android:layout_alignEnd="@+id/morebutton"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/catradioGroup">


                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Education"
                        android:id="@+id/edradioButton"
                        android:textColor="#ffffff"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Health"
                        android:id="@+id/helradioButton2"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/edradioButton"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Legal"
                        android:id="@+id/legradioButton3"
                        android:textColor="#ffffff"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Financial"
                        android:id="@+id/finradioButton4"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/entradioButton5"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Entertainment"
                        android:id="@+id/entradioButton5"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/helradioButton2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RadioGroup>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fsearch"
                    android:id="@+id/searchmbox"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#ffffff"
                    android:checked="false" />
                </LinearLayout>
                </ScrollView>
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:id="@+id/LinearLayoutfilter"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:background="#163e11">

                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="10"
                            android:orientation="vertical" >


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="10"
                            android:orientation="vertical" >


                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />




</android.support.v4.widget.DrawerLayout>
