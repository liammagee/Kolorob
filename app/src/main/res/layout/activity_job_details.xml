<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_jp4"
    android:layout_marginBottom="8dp"

    tools:context="demo.kolorob.kolorobdemoversion.activity.DetailsInfoActivityEducation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upper"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/upper_part"

            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/upperText"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বাউনিয়াবাদ আইডিয়াল হাই স্কুল "
                    android:textSize="25dp"
                    android:drawableLeft="@drawable/job"
                    android:paddingLeft="1dp"

                    android:id="@+id/ups_text"

                    />



            </LinearLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollingPart"

            >

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:id="@+id/middle_part">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/mail_address">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/address_only">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/address"

                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/address_text"/>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/phone_email">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/phone_text"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/email"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/email_text"/>



                            </LinearLayout>



                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/Job_info">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/direction_j"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/job_description"
                            android:textSize="28sp"
                            android:paddingLeft="10dp"
                            android:padding="5dp"
                            android:textColor="@color/blue"

                            android:layout_marginLeft="5dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="4dp"
                            android:text="Job Type: "
                            android:visibility="visible"
                            android:id="@+id/job_type"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/organization_time"
                            android:textSize="28sp"
                            android:paddingLeft="10dp"
                            android:padding="5dp"
                            android:textColor="@color/blue"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="4dp"
                            android:text="Opening Time: "
                            android:visibility="visible"
                            android:id="@+id/opening_time"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/application_time"
                            android:textSize="28sp"
                            android:paddingLeft="10dp"
                            android:padding="5dp"
                            android:textColor="@color/blue"

                            android:layout_marginLeft="5dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="4dp"
                            android:text="Application post date: "
                            android:visibility="visible"
                            android:id="@+id/post_date"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/salary_range"
                            android:textSize="28sp"
                            android:paddingLeft="10dp"
                            android:padding="5dp"
                            android:textColor="@color/blue"

                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="4dp"
                            android:text="Salary Range"
                            android:visibility="visible"
                            android:id="@+id/salary_range"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_collector"
                            android:textSize="28sp"
                            android:paddingLeft="10dp"
                            android:padding="5dp"
                            android:textColor="@color/blue"

                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="4dp"
                            android:text="Reference Person"
                            android:visibility="visible"
                            android:id="@+id/reference_person"

                            />



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/course_info">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/lll"
                            android:layout_below="@+id/tv_fb"
                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" কোর্স সমূহের তালিকা  "
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/blue"
                                android:textSize="28dp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageViewr"
                                android:src="@drawable/green_line_horizontal"
                                android:padding="5dp"
                                />

                            <ListView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"


                                android:id="@+id/courseListView" />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" কোর্স ফি "
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/blue"
                                android:textSize="28dp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageViewrd"
                                android:src="@drawable/green_line_horizontal"
                                android:padding="5dp"
                                />

                            <ListView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"

                                android:id="@+id/listView5" />




                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>




            </ScrollView>



        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/left_go_process"


            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distance_left"
                android:onClick="showdirection"

                android:background="@drawable/direction_j"/>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_middl"
                android:layout_centerInParent="true"
                android:background="@drawable/phone_j"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_side_email"
                android:layout_alignParentRight="true"
                android:onClick="sendemail"
                android:background="@drawable/email_j"/>


        </RelativeLayout>



    </RelativeLayout>



</RelativeLayout>
