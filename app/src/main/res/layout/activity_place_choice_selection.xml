<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.kolorob.kolorobdemoversion.activity.PlaceChoiceActivity"
    android:background="@drawable/backdrop">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_kolorob_logo"
        android:src="@drawable/kolorob_logo_first_page"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boy_figure"
        android:id="@+id/boy"
        android:layout_below="@+id/girl" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/girl_figure"
        android:id="@+id/girl"
        android:gravity="top"
        android:layout_above="@+id/iv_kolorob_logo"
        android:layout_toRightOf="@+id/iv_kolorob_logo"
        android:layout_toEndOf="@+id/iv_kolorob_logo" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_baunia"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/iv_kolorob_logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_parise"
        android:layout_alignBottom="@+id/boy"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        />


</RelativeLayout>
