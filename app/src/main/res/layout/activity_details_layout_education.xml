<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/white"

    tools:context="demo.kolorob.kolorobdemoversion.activity.DetailsLayoutEducation">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:id="@+id/upper"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/education_color"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/top_logo"
                        android:background="@drawable/education_white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/cross_jb"
                        android:background="@drawable/cross_jb"/>
                </LinearLayout>









            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/education_color"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:id="@+id/upper_part"
                    android:background="@color/education_color"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/upperText"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ব্র্যাক ডেলিভারি সেন্টার"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:textColor="@color/white"

                            android:id="@+id/ups_text"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="4dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="23sp"
                                android:id="@+id/ratingText"
                                android:text="রেটিং: "/>

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/artist"
                                android:layout_below="@+id/artist"
                                android:numStars="5"
                                android:rating="0.0"
                                android:stepSize="0.1" />


                        </LinearLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:id="@+id/left_go_process"
                            android:layout_weight="0.3"
                            android:orientation="vertical"
                            android:gravity="right|center">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/distance_left"
                                android:background="@drawable/direction_icon"/>






                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="wrap_content"
                            android:id="@+id/middle_phone"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/phone_middl"
                                android:background="@drawable/phone_icon"/>





                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:orientation="vertical"
                            android:id="@+id/right_email"

                            android:layout_height="wrap_content"
                            android:gravity="center|left">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/right_side_email"
                                android:background="@drawable/email_icon"/>




                        </LinearLayout>






                    </LinearLayout>







                </LinearLayout>




            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:layout_marginBottom="0dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                    <!--android:text="Large Text"-->
                    <!--android:visibility="gone"-->
                    <!--android:id="@+id/other_detailsEnt" />-->


                    <ListView
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:fadeScrollbars="false"
                        android:scrollbarStyle="outsideInset"
                        android:paddingRight="5dp"
                        style="@style/scrollbar_shape_style"
                        android:layout_height="wrap_content"
                        android:id="@+id/allData" />


                </LinearLayout>



            </RelativeLayout>












        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:background="@color/education_color"
            android:id="@+id/bottom_bar"


            android:baselineAligned="false">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"

                android:layout_height="match_parent"
                android:gravity="center_vertical|left">
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/compare"

                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:buttonTint="@color/white"
                    android:layout_marginLeft="@dimen/margincheckbox"
                    android:textSize="29dp"
                    android:textColor="@color/white"
                    android:text="@string/compare"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:background="@drawable/feedback_icon"
                    android:onClick="verifyRegistration"




                    android:id="@+id/feedback"/>

            </LinearLayout>































        </LinearLayout>

    </LinearLayout>
</RelativeLayout>