<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"


    tools:context="demo.kolorob.kolorobdemoversion.activity.DetailsInfoActivityHealthNew">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/upper"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/health_color"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_logo"
                    android:background="@drawable/health_white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:gravity="right"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/close_buttonc"
                    android:background="@drawable/cross_jb"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/health_color"
            android:layout_height="wrap_content">




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:id="@+id/upper_part"
                android:background="@color/health_color"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/upperText"
                    android:layout_marginLeft="4dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ব্র্যাক ডেলিভারি সেন্টার"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@color/white"

                        android:id="@+id/ups_text"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="4dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="23sp"
                            android:id="@+id/ratingText"
                            android:text="রেটিং: "/>

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/artist"
                            android:layout_below="@+id/artist"
                            android:numStars="5"
                            android:rating="0.0"
                            android:stepSize="0.1" />


                    </LinearLayout>





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:id="@+id/left_go_process"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/distance_left"
                            android:background="@drawable/direction_icon"/>






                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:id="@+id/middle_phone"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/phone_middl"
                            android:background="@drawable/phone_icon"/>





                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:id="@+id/right_email"

                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/right_side_email"
                            android:background="@drawable/email_icon"/>




                    </LinearLayout>






                </LinearLayout>







            </LinearLayout>




        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">


                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                <!--android:text="Large Text"-->
                <!--android:visibility="gone"-->
                <!--android:id="@+id/other_detailsEnt" />-->


                <ListView
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:scrollbarStyle="outsideInset"
                    android:paddingRight="5dp"
                    style="@style/scrollbar_shape_style"
                    android:fadeScrollbars="false"
                    android:layout_height="wrap_content"
                    android:id="@+id/allData" />


            </LinearLayout>



        </LinearLayout>












    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"

        android:layout_height="wrap_content"
        android:background="@color/health_color"
        android:id="@+id/bottom_bar"

        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"

            android:layout_height="match_parent"
            android:gravity="center_vertical|left">
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/compare"



                android:buttonTint="@color/white"
                android:layout_marginLeft="20dp"
                android:textSize="30dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:paddingLeft="7dp"

                android:textColor="@color/white"
                android:text="@string/compare"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"


                android:background="@drawable/feedback_icon"
                android:onClick="verifyRegistration"




                android:id="@+id/feedback"/>

        </LinearLayout>































    </LinearLayout>



</RelativeLayout>