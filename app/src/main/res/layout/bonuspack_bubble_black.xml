<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:id="@+id/bubble_layout"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@drawable/bonus_screen" >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			<TextView android:id="@+id/bubble_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#F15A24"
				android:maxEms="17"
				android:layout_gravity="left"
				android:layout_weight="1"
				android:text="Title"
				android:textSize="15dp"
				android:paddingLeft="5dp"
				android:paddingRight="10dp"
				android:layout_marginTop="4dp"
				android:paddingTop="10dp"
				android:layout_marginLeft="10dp" />
			<Button android:id="@+id/bubble_moreinfo"
				android:background="@drawable/btn_moreinfo"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_weight="0" />
		</LinearLayout>

		<ImageView android:id="@+id/bubble_image"
            android:layout_width="match_parent"
			android:background="@drawable/orange_line_horizontal"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:paddingRight="10dp" />

		<TextView android:id="@+id/bubble_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#42210B"
			android:textSize="15dp"
			android:maxEms="17"
			android:text="যোগাযোগ"
			android:paddingLeft="5dp"
			android:paddingTop="5dp"
			android:layout_marginLeft="10dp"
			android:paddingRight="10dp" />
		<TextView android:id="@+id/bubble_subdescription"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#42210B"
			android:textSize="13dp"
			android:maxEms="17"
			android:text="রেটিংঃ"
			android:paddingLeft="5dp"
			android:paddingTop="5dp"
			android:layout_marginLeft="10dp"
			android:paddingRight="10dp" />

	</LinearLayout>
</LinearLayout>
