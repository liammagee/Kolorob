<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:layout_weight="1"
    android:background="#EBDED5" android:padding="6dp">
    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_alignParentTop="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/headerlayout"

android:visibility="gone"
        android:layout_marginTop="20dp"
        android:background="#29ABE2">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:id="@+id/imageView12"
            android:background="@drawable/distance_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/headtext"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView12"
            android:layout_toEndOf="@+id/imageView12"
            android:textColor="#ffffff" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/transportlayout"
            android:id="@+id/transportdetailslayout"

android:visibility="gone"


            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="120dp">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:background="#29ABE2"
                    android:layout_alignRight="@+id/currlocation"
                    android:layout_alignEnd="@+id/currlocation"
                    android:id="@+id/linearLayout6">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bus_icon"
                        android:id="@+id/imageView8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Bus Text"
                        android:id="@+id/bustext"
                        android:textColor="#000000"
                        android:layout_alignBottom="@+id/imageView8"
                        android:layout_toRightOf="@+id/imageView10"
                        android:layout_toEndOf="@+id/imageView10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="ricksawtext"
                        android:id="@+id/ricksawtext"
                        android:textColor="#000000"
                        android:layout_below="@+id/imageView8"
                        android:layout_alignLeft="@+id/bustext"
                        android:layout_alignStart="@+id/bustext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rickshaw_icon"
                        android:id="@+id/imageView9"
                        android:layout_below="@+id/bustext"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="cngtext"
                        android:id="@+id/cngtext"
                        android:textColor="#000000"
                        android:layout_alignTop="@+id/imageView10"
                        android:layout_alignLeft="@+id/ricksawtext"
                        android:layout_alignStart="@+id/ricksawtext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cng"
                        android:id="@+id/imageView10"
                        android:layout_below="@+id/ricksawtext"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/walking_icon"
                        android:id="@+id/imageView11"
                        android:layout_below="@+id/cngtext"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="walking"
                        android:id="@+id/walkingtext"
                        android:textColor="#000000"
                        android:layout_below="@+id/imageView10"
                        android:layout_alignLeft="@+id/cngtext"
                        android:layout_alignStart="@+id/cngtext" />


                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>




</RelativeLayout>