<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="demo.kolorob.kolorobdemoversion.activity.EmergencyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/kolorob_color"


            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout2"
            android:gravity="center_vertical|center_horizontal">




            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:gravity="center">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"


                    android:id="@+id/iv_kolorob_logo"
                    android:background="@drawable/emergency_icon"
                    />




            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right|top">




                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:minHeight="40dp"
                    android:minWidth="40dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/iv_close"
                    android:src="@drawable/cross_icon"
                    android:focusable="true" />


            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/white"/>

        <ExpandableListView
            android:id="@+id/lvExp"
            android:background="@color/kolorob_color"
            android:divider="@color/white"
            android:groupIndicator="@null"

            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:childDivider="@color/kolorob_color"
            android:dividerHeight="4dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </LinearLayout>


</RelativeLayout>
