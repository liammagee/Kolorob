<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"

	>

	<TextView
		android:text="emergency" android:id="@+id/header_name"
		android:textSize="18sp"
		android:textStyle="bold"
		android:textColor="#ffffff"

		android:layout_marginTop="5dp"
		android:layout_marginLeft="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"></TextView>

	<TextView
		android:text="emergency" android:id="@+id/title_name"
		android:textSize="18sp"
		android:textStyle="bold"
		android:textColor="#ffffff"
		android:layout_below="@+id/header_name"

		android:layout_marginBottom="1dp"
		android:gravity="center_horizontal"
		android:layout_marginLeft="20dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>

	<TextView
		android:text="@string/email_text" android:id="@+id/add_text"
		android:textSize="18sp"
		android:textStyle="bold"
		android:textColor="#ffffff"
		android:layout_gravity="right"
		android:layout_below="@+id/title_name"
		android:layout_marginLeft="20dp"
		android:layout_marginBottom="3dp"
		android:layout_marginTop="1dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/add_text"
		android:gravity="center_horizontal"
android:layout_marginBottom="10dp"
		>



		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/direction_icon"
			android:layout_toLeftOf="@+id/call_id"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:id="@+id/distance_id"
			/>

		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/phone_icon"
			android:layout_toLeftOf="@+id/email_id"
			android:layout_marginLeft="15dp"
			android:layout_centerVertical="true"
			android:id="@+id/call_id"

			/>


		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/email_icon"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="13dp"
			android:layout_marginBottom="10dp"

			android:id="@+id/email_id"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="right"
			/>



	</RelativeLayout>

</RelativeLayout>





