<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.kolorob.kolorobdemoversion.activity.DetailsJobActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detailed_info_panel_top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2"
        android:gravity="center_vertical|center_horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/iv_kolorob_logo"
                android:layout_marginLeft="18dp"
                android:background="@drawable/kolorob_logo"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content"
            android:gravity="center">


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="30dp"
              android:text="বিস্তারিত বিবরন "
              />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="বন্ধ করুন"
                android:id="@+id/tv_close"
                android:textColor="#000000"
                android:textSize="18sp"

                android:focusable="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_close"
                android:src="@drawable/close_button"
                android:focusable="true" />


        </LinearLayout>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout2"
        android:background="@drawable/detailed_info_panel_body"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_headers"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"

                    android:background="@drawable/but_chakri_small"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="নাম"

                    android:id="@+id/tv_header"
                    android:textColor="@color/blue"
                    android:textSize="25sp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />



            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentStart="true"
                android:src="@drawable/green_line_horizontal"
                android:layout_below="@+id/tv_headers"
                android:layout_alignParentLeft="true"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ঠিকানা :"
                android:id="@+id/tv_item_location"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ধরন :"
                android:id="@+id/tv_item_type"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@+id/tv_item_location"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="চাকুরির নাম :"
                android:id="@+id/job_name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@+id/tv_item_type"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="যোগাযোগের উপায়  :"
                android:id="@+id/tv_item_contact"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@+id/imageView5"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" প্রতিষ্ঠানের সময়সীমা"
                android:id="@+id/somoysima"
                android:textColor="@color/blue"
                android:visibility="visible"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:padding="5dp"
                android:layout_below="@+id/job_name"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagesomoysima"
                android:visibility="visible"
                android:layout_alignParentStart="true"
                android:src="@drawable/green_line_horizontal"
                android:layout_below="@+id/somoysima"
                android:layout_alignParentLeft="true"
                android:padding="5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email : "
                android:id="@+id/opening_time"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/imagesomoysima"
                android:layout_alignLeft="@+id/tv_website"
                android:layout_alignStart="@+id/tv_website" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email : "
                android:id="@+id/break_time"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/opening_time"
                android:layout_alignLeft="@+id/tv_website"
                android:layout_alignStart="@+id/tv_website" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email : "
                android:id="@+id/closingtime"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/break_time"
                android:layout_alignLeft="@+id/tv_website"
                android:layout_alignStart="@+id/tv_website" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" যোগাযোগের উপায়"
                android:visibility="visible"

                android:id="@+id/textView13"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:layout_below="@+id/closingtime" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_alignParentStart="true"
                android:src="@drawable/green_line_horizontal"
                android:visibility="visible"

                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email : "
                android:id="@+id/tv_email"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/tv_item_contact"
                android:layout_alignLeft="@+id/tv_website"
                android:layout_alignStart="@+id/tv_website" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Website : "
                android:id="@+id/tv_website"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/tv_email"
                android:layout_alignLeft="@+id/tv_fb"
                android:layout_alignStart="@+id/tv_fb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Facebook Link : "
                android:id="@+id/tv_fb"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"

                android:layout_below="@+id/tv_website"
                android:layout_alignLeft="@+id/textView13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Facebook Link : "
                android:id="@+id/road"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"

                android:layout_below="@+id/tv_fb"
                android:layout_alignLeft="@+id/textView13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Facebook Link : "
                android:id="@+id/block"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"

                android:layout_below="@+id/road"
                android:layout_alignLeft="@+id/textView13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Facebook Link : "
                android:id="@+id/landmark"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"

                android:layout_below="@+id/block"
                android:layout_alignLeft="@+id/textView13" />

        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detailed_info_panel_bottom"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout4"
        android:foregroundGravity="center"
        android:gravity="center">



    </LinearLayout>

</RelativeLayout>
