<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"

    android:background="@color/white"

    tools:context=".activity.DetailsLayoutFinance">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:id="@+id/upper"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:background="@color/financial_color"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:id="@+id/top_logo"
                        android:background="@drawable/finance_white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/close_buttonc"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/cross_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        />
                </LinearLayout>










            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/financial_color"
                android:layout_height="wrap_content">




                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:id="@+id/upper_part"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/upperText"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ব্র্যাক ডেলিভারি সেন্টার"
                            android:textSize="18sp"
                            android:textColor="@color/white"

                            android:id="@+id/ups_text"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="4dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="23sp"
                                android:id="@+id/ratingText"
                                android:text="রেটিং: "/>
                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/artist"
                                android:layout_below="@+id/artist"
                                android:numStars="5"
                                android:rating="0.0"
                                android:stepSize="0.1" />


                        </LinearLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:id="@+id/left_go_process"
                            android:layout_weight="0.3"
                            android:orientation="vertical"
                            android:gravity="center|right">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/distance_left"
                                android:background="@drawable/direction_icon"/>






                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="wrap_content"
                            android:id="@+id/middle_phone"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/phone_middl"
                                android:background="@drawable/phone_icon"/>





                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:orientation="vertical"
                            android:id="@+id/right_email"

                            android:layout_height="wrap_content"
                            android:gravity="center|left">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/right_side_email"
                                android:background="@drawable/email_icon"/>




                        </LinearLayout>






                    </LinearLayout>







                </LinearLayout>




            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/middle"
                >


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                    <!--android:text="Large Text"-->
                    <!--android:visibility="gone"-->
                    <!--android:id="@+id/other_detailsEnt" />-->


                    <ListView
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:fadeScrollbars="false"
                        android:scrollbarStyle="outsideInset"
                        android:paddingRight="5dp"
                        style="@style/scrollbar_shape_style"
                        android:layout_height="wrap_content"
                        android:id="@+id/allData" />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:background="@color/financial_color"
            android:id="@+id/bottom_bar"


            android:baselineAligned="false">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"


                    android:background="@drawable/feedback_icon"
                    android:onClick="verifyRegistration"




                    android:id="@+id/feedback"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/icon_gaph"
                    android:background="@drawable/comments_view_icon"
                    android:visibility="visible"
                    android:id="@+id/comments"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
</RelativeLayout>